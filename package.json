{
    "name": "crypto-lab",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "check": "biome check --write --unsafe src frontend/src",
        "build": "esbuild --bundle --minify --charset=utf8 --platform=node --format=esm --packages=external --outfile=dist/index.js src/index.ts",
        "serve": "node --run build && node dist/index.js",
        "dev": "tsx watch src/index.ts",
        "generate": "drizzle-kit generate",
        "migrate": "drizzle-kit migrate",
        "archive": "rm -f crypto-lab.7z && 7z a -mx9 crypto-lab.7z . -xr!.git -xr!database/database.db -xr!database/database.db-shm -xr!database/database.db-wal -xr!dist -xr!drizzle -xr!frontend -xr!node_modules -xr!storage -xr!config.yaml -xr!deploy.cmd -xr!pnpm-lock.yaml",
        "unarchive": "rm -rf public && 7z x -y crypto-lab.7z"
    },
    "dependencies": {
        "@hono/node-server": "^1.19.7",
        "@hono/zod-validator": "^0.7.5",
        "@napi-rs/blake-hash": "^1.3.6",
        "@node-rs/argon2": "^2.0.2",
        "@node-rs/xxhash": "^1.7.6",
        "adm-zip": "^0.5.16",
        "better-sqlite3": "^12.5.0",
        "csv-stringify": "^6.6.0",
        "drizzle-orm": "^0.45.1",
        "exit-hook": "^5.0.1",
        "hono": "^4.11.1",
        "hono-rate-limiter": "^0.5.0",
        "js-yaml": "^4.1.1",
        "node-stream-zip": "^1.15.0",
        "nodemailer": "^7.0.11",
        "string-argv": "^0.3.2",
        "wretch": "^3.0.6",
        "zod": "^4.2.1",
        "zod-validation-error": "^5.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.9",
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@types/adm-zip": "^0.5.7",
        "@types/better-sqlite3": "^7.6.13",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^25.0.2",
        "@types/nodemailer": "^7.0.4",
        "drizzle-kit": "^0.31.8",
        "esbuild": "^0.27.1",
        "lefthook": "^2.0.12",
        "tsx": "^4.21.0"
    }
}
